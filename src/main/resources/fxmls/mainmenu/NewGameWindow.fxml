<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="200.0" maxWidth="250.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.hopelew.jrpg.controllers.mainmenu.NewGameWindowController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%new_game_title">
         <VBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="tfHeroName">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <ToggleButton fx:id="tbSex" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="75.0" mnemonicParsing="false" text="undefined">
         <VBox.margin>
            <Insets />
         </VBox.margin></ToggleButton>
      <HBox alignment="CENTER" minHeight="40.0" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnCreate" alignment="CENTER" disable="true" maxWidth="160.0" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" text="%create_hero" />
            <Button fx:id="btnCancel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="68.0" layoutY="39.0" mnemonicParsing="false" text="%cancel" />
         </children>
      </HBox>
   </children>
</VBox>
